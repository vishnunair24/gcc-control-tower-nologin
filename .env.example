# PostgreSQL base credentials (used by docker-compose)
# These map to the `db` service in docker-compose.yml
POSTGRES_DB=gcccontroltower
POSTGRES_USER=gccuser
POSTGRES_PASSWORD=gccuser!123@

# Prisma connection string used by backend
# NOTE: the '@' in the password is URL-encoded as %40
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public
DATABASE_URL=postgresql://gccuser:gccuser!123%40@db:5432/gcccontroltower?schema=public

# Backend port inside its container
BACKEND_PORT=3001

# Frontend build-time API base (for Vite)
# In docker-compose we pass VITE_API_BASE_URL=/api via build args.
VITE_API_BASE_URL=/api
